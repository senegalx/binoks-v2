---
import Base from "@layouts/Base.astro";
import { markdownify } from "@lib/utils/textConverter";
import { getEntry } from "astro:content";
const entry = await getEntry("fonctionnalites", "index");
const { title, description, fonctionnalites } = entry.data;
---

<Base title={title} description={description}>
  <section class="section">
    <div class="container">
      <h1 class="text-center font-normal" set:html={markdownify(title)} />
      <div class="content text-center" set:html={markdownify(description)}/>
      <div class="section row -mt-6">
        {
          fonctionnalites?.map((fonctionnalite) => (
            <div class="col-12 mt-6 md:col-6">
              <div class="p-12  shadow">
                <div class="fonctionnalite-head relative">
                  <h4 set:html={markdownify(fonctionnalite.title)} />
                </div>
                <p class="fonctionnalite-body mt-4" set:html={markdownify(fonctionnalite.answer)} />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
